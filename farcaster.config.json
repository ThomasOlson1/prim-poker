{
  "name": "Prim's Poker",
  "description": "Turn-based poker mini dapp with variable timing and real-time notifications",
  "version": "1.0.0",
  "icon": "/icon.svg",
  "hero": "/hero-poker.jpg",
  "ogImage": "/og-image.jpg",
  "manifest": {
    "name": "Prim's Poker",
    "short_name": "Poker",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#0f172a",
    "theme_color": "#a855f7",
    "scope": "/",
    "icons": [
      {
        "src": "/icon-light-32x32.png",
        "sizes": "32x32",
        "type": "image/png",
        "media": "(prefers-color-scheme: light)"
      },
      {
        "src": "/icon-dark-32x32.png",
        "sizes": "32x32",
        "type": "image/png",
        "media": "(prefers-color-scheme: dark)"
      },
      {
        "src": "/icon-192x192.png",
        "sizes": "192x192",
        "type": "image/png"
      },
      {
        "src": "/icon-512x512.png",
        "sizes": "512x512",
        "type": "image/png"
      }
    ]
  },
  "features": {
    "notifications": true,
    "wallet": true,
    "turnBased": true,
    "multiplayer": true,
    "cashGames": true
  },
  "requirements": {
    "minFarcasterVersion": "2024.1.0",
    "permissions": ["address", "notifications"]
  }
}
