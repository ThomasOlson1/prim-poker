{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "hardhat.config.ts",
    "scripts/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
